    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/dark-mode.css">
    
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light" id="">
        <div class="container">
            <!-- Daily Journal Title -->
            <div class="navbar-header">
                <span class="navbar-brand h1">DAILY JOURNAL</span>
            </div>

            <!-- Dark Mode Switch: -->
            <div class="form-check form-switch">
                    <input class="switch-input" type="checkbox" id="darkSwitch" onChange="goDark()">
                    <label id="switch" class="switch-label" for="darkSwitch">
                        <i class="bi bi-moon"></i>
                        <i class="bi bi-sun"></i>
                        <div id="ball" class='ball'></div>
                    </label>
            </div>

            <!-- Navbar content -->
            <ul class="nav navbar-nav navbar-right">
                <li class="nav-item" id="home"><a class="nav-link" href="/">HOME</a></li>
                <div class="vr mx-2 opacity-25"></div>
                <li class="nav-item" id="about"><a class="nav-link" href="/compose">COMPOSE</a></li>
                <div class="vr mx-2 opacity-25"></div>
                <li class="nav-item" id="about"><a class="nav-link" href="/about">ABOUT US</a></li>
                <div class="vr mx-2 opacity-25"></div>
                <li class="nav-item" id="contact"><a class="nav-link" href="/contact">CONTACT US</a></li>
            </ul>
        </div>
    </nav>
    <script>
        // Changes the classes between light and dark mode 
        function goDark() {

            // For the navbar
            var navbarElement = document.getElementsByTagName("nav")[0]
            navbarElement.classList.toggle("bg-light"); // Removes light background color
            navbarElement.classList.toggle("navbar-light"); // 
            navbarElement.classList.toggle("navbar-dark");
            navbarElement.classList.toggle("bg-dark");
            navbarElement.classList.toggle("dark");

            // For the switch
            var switchBg = document.getElementById("switch")
            switchBg.classList.toggle("dark")            


            // For the body tag
            var bodyElement = document.body;
            bodyElement.classList.toggle("dark");

            // For the header tag
            var footerElement = document.getElementsByTagName("footer")[0]
            footerElement.classList.toggle("dark");
        }
    </script>
</head>

